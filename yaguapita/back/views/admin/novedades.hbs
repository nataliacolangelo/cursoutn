<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td class="text-end">
                        <a class="btn btn-secondary" href="">
                            <i class="fa fa-pencil" aria-hidden="true"></i> </a>
                        <a class="btn btn-secondary" href="">
                            <i class="fa fa-trash" aria-hidden="true"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                                class="fa fa-trash"></i></a>
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                                class="fa fa.pencil"></i></a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
